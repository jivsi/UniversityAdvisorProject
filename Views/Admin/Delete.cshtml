@model UniversityFinder.Models.University
@{
    ViewData["Title"] = "Delete University";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 py-12">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-4xl md:text-5xl font-bold font-display mb-4 gradient-text">Delete University</h1>
            <p class="text-xl text-gray-600 dark:text-gray-400">Are you sure you want to delete this university?</p>
        </div>

        <!-- Confirmation Card -->
        <div class="glass dark:glass-dark rounded-3xl p-8">
            <div class="mb-6 p-6 bg-red-50/50 dark:bg-red-900/20 rounded-2xl border-l-4 border-red-500">
                <div class="flex items-center gap-3 mb-4">
                    <i data-lucide="alert-triangle" class="w-6 h-6 text-red-500"></i>
                    <h3 class="text-lg font-semibold text-red-800 dark:text-red-200">Warning: This action cannot be undone</h3>
                </div>
                <p class="text-red-700 dark:text-red-300">Deleting this university will permanently remove it from the system.</p>
            </div>

            <div class="mb-6">
                <h3 class="text-lg font-semibold mb-4">University Details</h3>
                <div class="space-y-3">
                    <div>
                        <span class="text-sm text-gray-600 dark:text-gray-400">Name:</span>
                        <p class="text-lg font-semibold">@Model.Name</p>
                    </div>
                    <div>
                        <span class="text-sm text-gray-600 dark:text-gray-400">Country:</span>
                        <p class="text-lg font-semibold">@Model.Country</p>
                    </div>
                    <div>
                        <span class="text-sm text-gray-600 dark:text-gray-400">City:</span>
                        <p class="text-lg font-semibold">@Model.City</p>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="flex items-center gap-4">
                    <button type="submit" class="px-6 py-3 bg-red-600 text-white rounded-xl font-semibold hover:bg-red-700 transition-colors flex items-center gap-2">
                        <i data-lucide="trash-2" class="w-5 h-5"></i>
                        Delete University
                    </button>
                    <a asp-action="Index" class="px-6 py-3 bg-gray-500 text-white rounded-xl font-semibold hover:bg-gray-600 transition-colors">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}

