@model UniversityFinder.Models.University
@{
    ViewData["Title"] = "Edit University";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 py-12">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-4xl md:text-5xl font-bold font-display mb-4 gradient-text">Edit University</h1>
            <p class="text-xl text-gray-600 dark:text-gray-400">Update university information</p>
        </div>

        <!-- Form -->
        <div class="glass dark:glass-dark rounded-3xl p-8">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="mb-6 text-red-600 dark:text-red-400"></div>

                <div class="mb-6">
                    <label asp-for="Name" class="block text-sm font-semibold mb-2">University Name *</label>
                    <input asp-for="Name" class="w-full px-4 py-3 rounded-xl bg-white/50 dark:bg-gray-800/50 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400" placeholder="Enter university name" />
                    <span asp-validation-for="Name" class="text-red-600 dark:text-red-400 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Country" class="block text-sm font-semibold mb-2">Country *</label>
                    <input asp-for="Country" class="w-full px-4 py-3 rounded-xl bg-white/50 dark:bg-gray-800/50 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400" placeholder="Enter country" />
                    <span asp-validation-for="Country" class="text-red-600 dark:text-red-400 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="City" class="block text-sm font-semibold mb-2">City *</label>
                    <input asp-for="City" class="w-full px-4 py-3 rounded-xl bg-white/50 dark:bg-gray-800/50 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400" placeholder="Enter city" />
                    <span asp-validation-for="City" class="text-red-600 dark:text-red-400 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Website" class="block text-sm font-semibold mb-2">Website</label>
                    <input asp-for="Website" type="url" class="w-full px-4 py-3 rounded-xl bg-white/50 dark:bg-gray-800/50 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400" placeholder="https://example.com" />
                    <span asp-validation-for="Website" class="text-red-600 dark:text-red-400 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Email" class="block text-sm font-semibold mb-2">Email</label>
                    <input asp-for="Email" type="email" class="w-full px-4 py-3 rounded-xl bg-white/50 dark:bg-gray-800/50 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400" placeholder="contact@university.edu" />
                    <span asp-validation-for="Email" class="text-red-600 dark:text-red-400 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Phone" class="block text-sm font-semibold mb-2">Phone</label>
                    <input asp-for="Phone" type="tel" class="w-full px-4 py-3 rounded-xl bg-white/50 dark:bg-gray-800/50 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400" placeholder="+1 234 567 8900" />
                    <span asp-validation-for="Phone" class="text-red-600 dark:text-red-400 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Address" class="block text-sm font-semibold mb-2">Address</label>
                    <textarea asp-for="Address" rows="3" class="w-full px-4 py-3 rounded-xl bg-white/50 dark:bg-gray-800/50 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400" placeholder="Street address, City, Country"></textarea>
                    <span asp-validation-for="Address" class="text-red-600 dark:text-red-400 text-sm"></span>
                </div>

                <div class="flex items-center gap-4">
                    <button type="submit" class="px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-xl font-semibold hover:shadow-lg transform hover:scale-105 transition-all flex items-center gap-2">
                        <i data-lucide="save" class="w-5 h-5"></i>
                        Update University
                    </button>
                    <a asp-action="Index" class="px-6 py-3 bg-gray-500 text-white rounded-xl font-semibold hover:bg-gray-600 transition-colors">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

