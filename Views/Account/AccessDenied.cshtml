@{
    ViewData["Title"] = "Access Denied";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full text-center">
        <div class="glass dark:glass-dark rounded-3xl p-8 shadow-2xl">
            <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-gradient-to-br from-red-500 to-pink-500 flex items-center justify-center">
                <i data-lucide="lock" class="w-12 h-12 text-white"></i>
            </div>
            <h2 class="text-3xl font-bold font-display gradient-text mb-4">Access Denied</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-6">
                You don't have permission to access this resource.
            </p>
            <a 
                asp-controller="Home" 
                asp-action="Index" 
                class="inline-block px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-xl font-semibold hover:shadow-lg transform hover:scale-105 transition-all"
            >
                Go to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}

